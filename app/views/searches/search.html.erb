<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user)  %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(book.get_image), book_path(id: book.id) %></td>
          <td>タイトル(著者)：<%= book.title %></td>
          <td class="text-justify">内容：<%= book.body %></td>
          <td>投稿者：<%= book.user.name %> - <%= image_tag book.user.get_profile_image %></td>
          <td>投稿日：<%= book.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>