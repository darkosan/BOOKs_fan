<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-3 text-center">プロフィール編集</h1>
      <div class="border border-primary">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <h4>必要情報を入力してください</h4>
          <div class="row">
            <div class="col-md">
              <div class="field">
                <%= f.label "名前" %><br />
                <%= f.text_field :name, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label "画像" %><br />
                <%= f.file_field :profile_image %>
              </div>

              <div class="field">
                <%= f.label "メールアドレス" %><br />
                <%= f.email_field :email, autocomplete: "email" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label "新しいパスワード" %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label "確認の為、もう一度ご入力ください" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="field">
                <%= f.label "現在のパスワードをご入力ください" %><br />
                <%= f.password_field :current_password, autocomplete: "current-password" %>
              </div>

              <div class="my-3 text-center">
                <div class="actions">
             　    <%= f.submit "更新" %>
                </div>
              </div>
                <%= link_to "戻る", :back %>
            </div>
          </div>
          <% end %>
        </div>

        <div class="row">
          <div class="col-md my-3 text-center">
            <div><%= button_to "退会", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
