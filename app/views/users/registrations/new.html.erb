<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-3 text-center">新規登録</h1>
      <div class="border border-primary">
        <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <h4 class="my-3 text-center">必要情報を入力してください</h4>
          <div class="row">
            <div class="col-md">
              <div class="field">
                <%= f.label "名前" %><br />
                <%= f.text_field :name %>
              </div>

              <div class="field">
                <%= f.label "メールアドレス" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
 　           </div>

              <div class="field">
                <%= f.label "確認のため、もう一度ご入力ください" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="my-3 text-center">
                <div class="actions">
                  <%= f.submit "登録" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="col-md my-2">
          ログインをするなら→<%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>