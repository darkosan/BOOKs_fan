<div class="text-center">
  <br />
  <h1>ログイン</h1>
  <br />
</div>

<div class="border border-primary, mx-auto" style="width: 600px;">
  <%= form_with model: @user, url: user_session_path do |f| %>
  <br />
  <h3>必要情報を入力してください</h3>
  <br />
  <div class="row">
    <div class="col-md">
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <br />
      <div class="text-center">
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </div>
  <% end %>
  新規登録をするなら→<%= render "devise/shared/links" %>
    </div>
  </div>
</div>