<div class="row">
  <%= render partial: "layouts/search_and_genre", locals: { genres: @genres } %>
  <div class="col-md-7 offset-md-1">
    <h1 class="my-4 text-center">User 一覧</h1>

    <% @users.each do |user| %>
      <div>
        <%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image %>
        <% end %>
        <p>投稿者：<%= user.name %></p>
      </div>
    <% end %>

  </div>
</div>
