<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-3 text-center">ジャンル編集</h1>
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= render partial: "form", locals: { genre: @genre } %>
      <%= link_to "戻る", :back %>  |
      <%= link_to "一覧", genres_path %>  |
      <%= link_to "削除", genre_path, method: :delete %>
    </div>
  </div>
</div>