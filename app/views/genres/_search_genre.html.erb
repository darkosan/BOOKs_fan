<div class="col-md-3 my-5">
  <div class="search_form">
    <%= form_with url: books_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, value: params[:word] %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]], selected: params[:search]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
  <h3 class="my-4 text-center">ジャンル一覧</h3>
  <% genres.each do |genre| %>
    <%= link_to genre.name, books_path(genre_id: genre.id) %><br/>
  <% end %>
</div>

