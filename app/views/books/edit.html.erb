<div class="row">
  <%= render partial: "layouts/search_and_genre", locals: { genres: @genres } %>
  <div class="col-md-7 offset-md-1">
    <h1 class="my-3 text-center">BOOK 編集</h1>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= render partial: "form", locals: { book: @book } %>
    <%= link_to "戻る", :back %>  |
    <%= link_to "一覧", books_path %>
  </div>
</div>
