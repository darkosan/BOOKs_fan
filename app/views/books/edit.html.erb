<h1>BOOK 編集</h1>
<%= form_with model: @book do |f| %>

  <h4>BOOK画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_area :body %>

  <%= f.submit "変更を保存" %>
  <%= link_to "登録", book_path(@book.id) %>
  <%= link_to "一覧", books_path %>

<% end %>