<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="my-3 text-center">BOOK 編集</h1>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= render partial: "form", locals: { book: @book, genres: @genres } %>
    <%= link_to "戻る", :back %>  |
    <%= link_to "一覧", books_path %>
  </div>
</div>
