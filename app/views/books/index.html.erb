<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="my-4 text-center">BOOK 一覧</h1>
      <% @books.each do |book| %>
        <div class="row border border-primary-dark mb-5">
          <%= link_to book_path(book.id) do %>
            <%= image_tag book.get_image %>
          <% end %>
          <p>タイトル(著者)：<%= book.title %></p>
          <p class="text-justify">内容：<%= simple_format(book.body) %></p>
          <p>投稿者：<%= book.user.name %> - <%= image_tag book.user.get_profile_image %></p>
          <p>ジャンル：<%= book.genre_id %></p>
          <p>投稿日：<%= book.created_at.strftime('%Y/%m/%d') %></p>

        </div>
      <% end %>
    </div>
  </div>
</div>
