<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="my-3 text-center">新規投稿</h1>

      <%= form_with model: @book do |f| %>
        <h4>BOOK画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4>タイトル 著書名</h4>
          <%= f.text_field :title %>
        <h4>内容</h4>
          <%= f.text_area :body %>
        <div class="my-3 text-center">
          <%= f.submit '投稿' %>
        </div>
      <% end %>
    </div>
  </div>
</div>