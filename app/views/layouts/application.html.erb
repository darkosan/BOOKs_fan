<!DOCTYPE html>
<html>
  <head>
    <title>BOOKsFan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/da38fec662.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar nabbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-2" herf="/"><%= image_tag('logo.png') %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Book 一覧', books_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to 'User  一覧', users_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to '新規投稿', new_book_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "アプリケーション 説明", about_path, class: 'nav-link text-dark' %>
              </li>
              <% end %>
            </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <div class="container">
        <%= yield %>
        <% if user_signed_in? %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        <% end %>
      </div>
    </main>

    <footer class="bg-secondary text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>BOOKs Fan </p>
          </div>
          <div class="col-md-8">
            <ul class="text-white mt-2 mb-3 p-0 list-unstyled">
              <li>
                <a href="/homes/about"  class="text-dark-50">アプリケーション説明</a>
              </li>
              <li>
                <a href="/admins/sign_in"  class="text-dark-50">管理者用</a>
              </li>
              <li>
                <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
